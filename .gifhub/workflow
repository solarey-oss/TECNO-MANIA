name: Generate Daily Tech Article

on:
  schedule:
    - cron: "0 8 * * *"  # ogni giorno alle 08:00 UTC
  workflow_dispatch:      # per eseguirlo anche manualmente

jobs:
  generate:
    runs-on: ubuntu-latest

    permissions:
      contents: write   # serve per committare nel repo

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 18

      - name: Install dependencies
        run: npm ci

      - name: Generate new article
        env:
          OPENAI_API_KEY: ${{ secrets.OPENAI_API_KEY }}
          AMAZON_TAG: ${{ secrets.AMAZON_TAG }}
        run: |
          node scripts/generate-article.js

      - name: Commit and push new article
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add content/articles/*.md
          if git diff --cached --quiet; then
            echo "No new articles to commit."
          else
            git commit -m "üìù auto: new daily article $(date -u +"%Y-%m-%d")"
            git push origin main
dependencies
